<%= render 'shared/notice' %>
<div class="m-4">
  <div class="border p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><%= link_to "Breweries", breweries_path, class: "text-decoration-none", data: { turbo: "false" } %></h2>
      <%= form_tag breweries_path, method: :get, data: { turbo: "false" } do %>
        <div class="row">
          <div class="col">
            <%= select_tag :search_type, options_for_select(sorting_list), class: "btn btn-secondary dropdown-toggle dropdown-toggle-split" %>
          </div>
          <div class="col">
            <div class="input-group rounded">
              <%= text_field_tag :search, nil, class: "form-control rounded", placeholder: "Search"  %>
              <button class='btn btn-secondary'>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                  <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Brewery Type</th>
          <th>Brewery Address 1</th>
          <th>City</th>
          <th>State Province</th>
          <th>Postal Code</th>
          <th>State</th>
          <th>Country</th>
          <th>Phone</th>
          <th>Website Url</th>
          <th>Rating</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @breweries.each do |brewery| %>
          <%= render partial: 'brewery', locals: { brewery:  brewery } %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
